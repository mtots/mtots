{
  "comments": {
      "lineComment": "#",
      "blockComment": [ "r###\"", "\"###" ]
  },
  "folding": {
    "offSide": true,
    "markers": {
        "start": "^\\s*#\\s*region\\b",
        "end": "^\\s*#\\s*endregion\\b"
    }
  },
  "onEnterRules": [
    {
        "beforeText": "^\\s*(?:static|def|class|trait|for|if|elif|else|while)\\b.*?:\\s*$",
        "action": { "indent": "indent" }
    },
    {
        "beforeText": "^\\s*pass\\s*$",
        "action": { "indent": "outdent" }
    },
    {
        "beforeText": "^\\s*return\\b.*?$",
        "action": { "indent": "outdent" }
    }
  ],
  // symbols used as brackets
  "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["\"\"\"", "\"\"\""],
      ["'", "'"]
  ],
  // symbols that can be used to surround a selection
  "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"],
      ["\"", "\""],
      ["\"\"\"", "\"\"\""],
      ["'", "'"]
  ]
}